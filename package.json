{
	"name": "custom-cursor-react",
	"version": "0.1.0",
	"description": "Interactive and customizable cursor component for React",
	"author": "ajmnz",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"homepage": "https://ajmnz.github.io/custom-cursor-react",
	"repository": "https://github.com/ajmnz/custom-cursor-react",
	"keywords": [
		"react",
		"cursor",
		"react custom cursor",
		"react cursor",
		"react interactive cursor",
		"custom cursor",
		"interactive cursor",
		"animated cursor"
	],
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"module": "dist/custom-cursor-react.esm.js",
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"arrowParens": "always",
		"useTabs": true
	},
	"size-limit": [
		{
			"path": "dist/custom-cursor-react.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/custom-cursor-react.esm.js",
			"limit": "10 KB"
		}
	],
	"jest": {
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
			"\\.(css|less)$": "identity-obj-proxy"
		}
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^5.0.2",
		"@testing-library/react": "^12.0.0",
		"@types/react": "^17.0.16",
		"@types/react-dom": "^17.0.9",
		"@types/react-test-renderer": "^17.0.1",
		"husky": "^7.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-test-renderer": "^17.0.2",
		"rollup-plugin-static-files": "^0.2.0",
		"size-limit": "^5.0.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	},
	"peerDependencies": {
		"react": ">=16"
	}
}
